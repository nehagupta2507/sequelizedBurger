<div class="row container">
    <div class="col-md-6">
        <h1 class = "text-center">Eat-Da-Burger</h1>
        <img src="images/burger.jpg" alt="burger">
    </div>
    <div class="col-md-6">
    <br>
        <div class ="row">
            <div class="card col-md-12">
            <h4 class="card-header"> &#127828 Add a Burger &#127828</h4>
            <div class="card-body">
            <form class="create-form">
                <div class="form-group">
                    <label for="bur">Enter the name of the burger:</label>
                    <input type="text" id="bur" class="form-control">
                    <br>
                    <button type="submit" class="btn btn-block btn-info" id="addBurger">Submit</button>
                </div>
            </form>
            </div>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="card col-md-6">
            <h4 class="card-header">Burger List &#127828</h4>
            <div class="card-body">
                {{#each burger_data}}
                    {{#unless this.devoured}}
                    <div>
                        <p>#{{this.id}}: {{this.burger_name}}
                        <button class="devoured btn btn-success" data-id="{{this.id}}">DEVOUR!</button>
                        </p>
                    </div>
                    <br>
                    {{/unless}}
                {{/each}}
            </div>
            </div>
            <div class="card col-md-6">
            <h4 class="card-header">Devoured List &#127828</h4>
            <div class="card-body">            
                {{#each burger_data}}
                    {{#if this.devoured}}
                        <div>
                            <p>#{{this.id}}: {{this.burger_name}}
                            <button class="delBur btn btn-danger" data-id="{{this.id}}">X</button>
                            </p>
                        </div>
                        <br>
                    {{/if}}
                {{/each}}
            </div>
            </div>
        </div>
    </div>
</div>



